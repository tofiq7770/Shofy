@using BackendMiniTask.ViewModels.Slider
@model SliderUpdateVM


<div class="container mt-5">
    <h3 class="text-center text-dark">Update Slider</h3>
    <img src="~/assets/images/@Model.Image" style="width:200px" />
    <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
        <div class="form-group">
            <label class="mt-4">Title</label>
            <input asp-for="Title" class="form-control text-black" maxlength="50">
            <span class="text-danger" asp-validation-for="Title"></span>

            <label class="mt-4">SubTitle</label>
            <input asp-for="SubTitle" class="form-control text-black" maxlength="20">
            <span class="text-danger" asp-validation-for="SubTitle"></span>

            <label class="mt-4">Description</label>
            <input asp-for="Description" class="form-control text-black" maxlength="20">
            <span class="text-danger" asp-validation-for="Description"></span>

            <label asp-for="Photo">Choose new Photo</label>
            <input asp-for="Photo" class="form-control" placeholder="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>


        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a asp-action="Index" class="btn btn-primary text-white">Back</a>
    </form>
</div>
